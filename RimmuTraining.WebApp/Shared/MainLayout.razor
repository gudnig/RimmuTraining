@inherits LayoutComponentBase
<Bar Breakpoint="Breakpoint.Desktop" Background="Background.Light" ThemeContrast="ThemeContrast.Light">
    <BarBrand>
        <a class="navbar-item" href="/">
            <img src="http://www.haukstaldir.de/wp-content/uploads/2014/05/Rimmugygur.png">
            <span class="title is-5">Þjálfi</span>
        </a>
        <BarToggler>
        </BarToggler>
    </BarBrand>

    <BarMenu>
        <BarStart>
            <AuthorizeView Policy="IsTrainer">
                <BarItem>
                    <BarLink To="members">Members</BarLink>
                </BarItem>
            </AuthorizeView>
            <AuthorizeView Policy="IsTrainer">
                <BarItem>
                    <BarLink To="practices">Practices</BarLink>
                </BarItem>
            </AuthorizeView>
        </BarStart>
        <BarEnd>
            <LoginDisplay></LoginDisplay>
        </BarEnd>
    </BarMenu>
</Bar>



<section class="main-content columns is-fullheight section">
    <CascadingValue Value="@alertRef">
        <div class="container">
            <ErrorAlert @ref="alertRef"></ErrorAlert>
            @Body
        </div>
    </CascadingValue>
</section>


@code {
    public ErrorAlert alertRef;
}